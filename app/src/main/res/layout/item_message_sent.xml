<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginEnd="@dimen/messages_horizontal_padding"
    android:padding="6dp">


    <TextView
        android:id="@+id/contact_tv_last_message_body"
        style="@style/message_text_view_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/message_sent_background"
        tools:text="hello, hello!"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message_tv_time"
        style="@style/message_text_view_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        tools:text="11:40"
        app:layout_constraintBottom_toBottomOf="@+id/contact_tv_last_message_body"
        app:layout_constraintRight_toLeftOf="@+id/contact_tv_last_message_body" />

</android.support.constraint.ConstraintLayout>