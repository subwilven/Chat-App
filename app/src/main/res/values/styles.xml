<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="login_and_signu_up_root_element">

    </style>

    <style name="registeration_edit_text">
        <item name="android:background">@drawable/edit_text_white</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="registeration_dark_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/btn_trasparent</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="registeration_text_view_app_name">
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="registeration_light_button">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:background">@drawable/edit_text_white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="message_text_view_body">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:maxWidth">@dimen/message_max_width</item>
    </style>

    <style name="message_text_view_time">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Theme.Search" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="search_activity">

    </style>
</resources>
